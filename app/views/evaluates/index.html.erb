<% title("#{@product.name}评测") %>
<% head_keyword("#{@product.name}评测") %>
<% head_desc("#{@product.name}评测") %>
<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12">
    <div id="about_product" class="container_box">
      <%= render 'shared/product_head' %>
      <div id="all_evaluates">
        <div>
          <% if can? :new, Evaluate %>
            <%= link_to "我想写评测", new_product_evaluate_path(@product), class:"btn btn-primary" %>
          <% end %>
        </div>  
        <hr>
        <div class="limit_evaluates">
          <%= render partial: 'evaluate', collection: @evaluates %>
        </div>
      </div>
    </div>
  </div>
</div>
